{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Mes tâches</h1>

    {% if tasks is empty %}
        <div class="alert alert-info">
            Aucune tâche pour le moment !
        </div>
    {% else %}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date limite</th>
                    <th>Statut</th>
                    <th>Créée le</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ task.title }}</td>
                        <td>{{ task.descrption ?? '-' }}</td>
                        <td>
                            {{ task.dueDate ? task.dueDate|date('d/m/Y') : '—' }}
                        </td>
                        <td>
                            {% if task.isDone %}
                                <span class="badge bg-success">Terminée</span>
                            {% else %}
                                <span class="badge bg-warning text-dark">En cours</span>
                            {% endif %}
                        </td>
                        <td>{{ task.createdAt|date('d/m/Y H:i') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
